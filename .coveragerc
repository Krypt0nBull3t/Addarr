[run]
source = src
omit =
    # Root — entry points, no unit tests
    src/__init__.py
    src/main.py
    src/setup.py
    # Config — reads from disk at import time
    src/config/settings.py
    # Utils — interactive/display, no unit tests
    src/utils/config_handler.py
    src/utils/prerun.py
    src/utils/splash.py

[report]
fail_under = 100
exclude_lines =
    pragma: no cover
    if __name__ == .__main__
    pass
show_missing = true
